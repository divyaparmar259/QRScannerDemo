@{
    ViewData["Title"] = "QR Connect - Home";
}

<!-- Font Awesome for social icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        background: url('/images/bg-landing.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.65);
        min-height: 100vh;
        display: block; /* Remove flex behavior */
        text-align: center;
        padding: 3rem 1rem 2rem;
    }

    .hero-logo {       
        width: 60%;
        max-width: 300px;
        height: auto;
        margin-bottom: 30px;
    }

    .hero-title {
        margin-bottom: 40px;
        font-size: 2.5rem;
        font-weight: bold;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.8);
        margin-bottom: 30px;
    }

    .btn-custom {
        width: 260px;
        margin: 10px;
        font-size: 1.1rem;
        border-radius: 30px;
        padding: 12px 20px;
        font-weight: bold;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-whatsapp {
        background-color: #25D366;
        color: white;
    }

    .btn-instagram {
        background-color: #E1306C;
        color: white;
    }

    .btn-contact {
        background-color: #f0ad4e;
        color: white;
    }

    .btn-savecontact {
        background-color: #0d6efd; /* Bootstrap primary blue */
        color: white;
        font-weight: bold;
        border: none;
    }

        .btn-savecontact:hover {
            background-color: #084298;
            color: white;
        }

    @@media (max-width: 768px) {
        .hero-logo

    {
        width: 200px;
    }

    }

    @@media (max-width: 480px) {
        .hero-logo

    {
        width: 150px;
    }

    }
    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero-title

    {
        font-size: 2rem;
    }

    .btn-custom {
        width: 90%;
        font-size: 1rem;
    }

    }

    @@media (max-width: 480px) {
        .hero-title

    {
        font-size: 1.6rem;
    }

    .hero-logo {
        max-width: 80px;
    }

    }
</style>

<div class="overlay">
    <img src="/Images/logo.jpg" alt="Logo" class="hero-logo" />
    <h1 class="hero-title">Connect with Us</h1>

    <div>

        <a href="/Files/contact.vcf" download class="btn btn-custom btn-savecontact">
            <i class="fas fa-address-card"></i> Save Our Contact
        </a>
        <br />
        <a href="https://wa.me/9825768100?text=Hello%2C%20I%E2%80%99d%20like%20to%20know%20more%20about%20your%20products." target="_blank" class="btn btn-custom btn-whatsapp">
            <i class="fab fa-whatsapp"></i> WhatsApp
        </a>

        <br />

        <a href="http://instagram.com/mansi_diamond/?hl=en" target="_blank" class="btn btn-custom btn-instagram">
            <i class="fab fa-instagram"></i> Instagram
        </a><br />

        <a href="/Home/Contact" class="btn btn-custom btn-contact">
            <i class="fas fa-envelope"></i> Contact Us
        </a>
    </div>
</div>


